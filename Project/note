<?php
session_start();

// Check if the user is not logged in, redirect to login page
if (!isset($_SESSION["username"])) {
    header("Location: login.php");
    exit();
}

// Define the target file path
$targetFile = "Asset/image.png";

// Check if the form is submitted
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Check if the file was uploaded without errors
    if (isset($_FILES["newImage"]) && $_FILES["newImage"]["error"] == 0) {
        // Get file information
        $fileType = strtolower(pathinfo($_FILES["newImage"]["name"], PATHINFO_EXTENSION));

        // Allow only certain file formats (you can customize this based on your needs)
        $allowedFormats = ["jpg", "jpeg", "png", "gif"];
        if (in_array($fileType, $allowedFormats)) {
            // Move the uploaded file to replace the existing file
            move_uploaded_file($_FILES["newImage"]["tmp_name"], $targetFile);

            $uploadMessage = "File uploaded successfully!";
        } else {
            $uploadMessage = "Sorry, only JPG, JPEG, PNG, and GIF files are allowed.";
        }
    } else {
        $uploadMessage = "Error uploading file.";
    }
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Uploader (Logged In)</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .uploader-card {
            max-width: 400px;
            width: 90%;
            text-align: center;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            position: relative;
        }

        .profile-picture {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
            position: absolute;
            top: 20%;
            right:center;
        }

        .btn-custom {
            background-color: red;
            color: white;
            font-size: 0.8rem; /* Adjust the font size as needed */
            padding: 0.2rem 0.5rem; /* Adjust the padding as needed */
        }

        .custom-file-input,
        .btn-custom {
            color: white;
            background-color: red;
        }

        .custom-file-label {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            background-color: red;
            border: 1px solid red;
        }

        .custom-file-input:focus ~ .custom-file-label {
            border-color: red;
            box-shadow: 0 0 0 0.2rem rgba(255, 0, 0, 0.25);
        }

        .upload-message {
            color: green;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <img src="<?php echo $targetFile . '?' . time(); ?>" alt="Profile Picture" class="profile-picture">

    <div class="uploader-card mt-5">
        <h2 class="mb-4">Replace Image</h2>
        <form action="" method="post" enctype="multipart/form-data">
            <!-- Small button with the same id and functionality -->
            <!-- Actual file input, hidden with CSS -->
            <button type="button" class="btn btn-primary btn-custom" onclick="document.getElementById('newImage').click()">Browse</button>
            <input type="file" class="custom-file-input" id="newImage" name="newImage" accept="image/*" style="display: none;">
            <!--<label class="custom-file-label" for="newImage"></label>-->

            <?php if (isset($uploadMessage)) : ?>
                <p class="upload-message"><?php echo $uploadMessage; ?></p>
            <?php endif; ?>
            <button type="submit" class="btn btn-primary btn-custom">Upload</button>
        </form>

        <?php
        // Display the uploaded image if it exists
        if (file_exists($targetFile)) {
            echo '<h3 class="mt-4">Uploaded Image:</h3>';
            echo '<img src="' . $targetFile . '?' . time() . '" alt="Uploaded Image" class="img-fluid rounded">';
        }
        ?>
    </div>

    <!-- Include Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
